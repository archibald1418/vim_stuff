syntax on

set number
set showcmd

" Finishes a paired operator and steps back inside
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap <> <><left>

" Install NERDTree :PlugInstall
call plug#begin()
  Plug 'preservim/nerdtree'
call plug#end()

map <F3> :NERDTreeMirror
map <F3> :NERDTreeToggle
nnoremap <C-z> :NERDTreeFocus
nnoremap <C-n> :NERDTree
nnoremap <C-tab> :NERDTreeToggle
nnoremap <C-f> :NERDTreeFind

" This lets you exit the hlsearch silently
set hlsearch
nnoremap <esc><esc> :silent! nohls
